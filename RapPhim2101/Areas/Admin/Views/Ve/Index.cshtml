@model IEnumerable<RapPhim2101.Models.Ve>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Thông tin Vé </h2>

<p>
    @Html.ActionLink("Thêm vé", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mã Vé
        </th>
        <th>
            Mã Phòng
        </th>
        <th>
            Mã phim
        </th>
        <th>
            Mã Loại Phim
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaVe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaPhong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaPhim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaLV)
            </td>
          
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.MaVe }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaVe }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaVe })
            </td>
        </tr>
    }

</table>
